@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="dangnhap">
    <h4>@ViewBag.ThongBao</h4>
    <table align="center">
        <h3>ĐĂNG NHẬP</h3>
        @using (Html.BeginForm())
        {
            <tr>
                <td>Tên đăng nhập:</td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["Loi1"]
                </td>
            </tr>
            <tr>
                <td>Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau")
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" />
                </td>
            </tr>
        }
    </table>
</div>
