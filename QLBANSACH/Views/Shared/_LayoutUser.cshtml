<!DOCTYPE html>
<html lang="en">
<head>
    <title>Quản lý bán sách</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/mysite.css">
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Scripts/style.css" rel="stylesheet" />

</head>
<body>
    <!-- Layout Header -->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- LOGO Banner-->
                <a class="navbar-brand" href="#">Tiệm sách của Urine</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <!-- NAVIGATION ITEMS -->
                    <li class="
                        "><a href="~/BookStore/Index">BookStore</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="~/giohang/giohang"><img src="~/Images/icon/xehang.gif" alt="Xe hàng" /> Giỏ hàng(@Html.Action("SoLuongGioHang", "Giohang"))</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Dangnhap","NguoiDung")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    <li><a href="@Url.Action("DangKy","NguoiDung")"><span class="glyphicon glyphicon-log-in"></span> Register</a></li>
                </ul>
                <div class="TimKiem">
                    @using (Html.BeginForm())
                    {
                        <p>
                            Tim Kiem: @Html.TextBox("SearchString")
                            <input type="submit" value="Search" />
                        </p>
                    }
                </div>
            </div>
        </div>
    </nav>
    <!-- END: HEADER -->
    <!-- BODY -->
    <div class="container-fluid text-center">
        <div class="row content">

            <!-- LEFT -->
            <div class="col-sm-2">

                <!-- Chủ đề sách -->
                <p class="lead">CHỦ ĐỀ SÁCH</p>
                @Html.Action("ChuDe", "BookStore")
                <!-- Chủ đề sách -->
                <!-- Nhà xuất bản -->
                <p class="lead">NHÀ XUẤT BẢN</p>
                @Html.Action("NhaXuatBan", "BookStore")
                <!-- Nhà xuất bản -->

            </div>

            <!-- Layout Giữa -->
            <div class="col-sm-10 text-left">

                <!-- TOP Carousel -->
                <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
                    

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="img-center" src="~/Images/adv1.png" alt="Không hiển thị được hình">
                        </div>

                        <div class="item">
                            <img class="img-center" src="~/Images/adv1.png" alt="Không hiển thị được hình">
                        </div>

                        <div class="item">
                            <img class="img-center" src="~/Images/adv1.png" alt="Không hiển thị được hình">
                        </div>
                    </div>

                </div>
                <!-- END Carousel -->

                @RenderBody()

            </div>
        </div>
    </div>
    <!-- FOOTER -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>company</h4>
                    <ul>
                        <li><a href="#">about us</a></li>
                        <li><a href="#">our services</a></li>
                        <li><a href="#">privacy policy</a></li>
                        <li><a href="#">affiliate program</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>get help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">shipping</a></li>
                        <li><a href="#">returns</a></li>
                        <li><a href="#">order status</a></li>
                        <li><a href="#">payment options</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>online shop</h4>
                    <ul>
                        <li><a href="#">watch</a></li>
                        <li><a href="#">bag</a></li>
                        <li><a href="#">shoes</a></li>
                        <li><a href="#">dress</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>follow us</h4>
                    <div class="social-links">
                        <a href="https://www.facebook.com/BFStReEt2410"><i class="fab fa-facebook-f"><img src=""/></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>







</html>
